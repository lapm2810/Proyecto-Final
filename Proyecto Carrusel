//Galeria


ackage ProyectofinalCarrusel;

import ProyectofinalCarrusel.Imagen;
import java.util.ArrayList;

/**
 *
 * @author T107
 */
public class Galeria {
    ArrayList<Imagen> imagenes;
    private Object i7;

    public Galeria() {
        imagenes=new ArrayList<>();
        
        Imagen i1=new Imagen();
        i1.setUrl("/ProyectofinalCarrusel/1.fw.png");
        i1.setTitulo("Primeras Vacaciones");
        i1.setDescripcion("Estas fueron mis primeras vacaciones en el año 2003 en el Estado de San Luis Potosi");
        
        
        Imagen i2=new Imagen();
        i2.setUrl("/ProyectofinalCarrusel/2.fw.png");
        i2.setTitulo("Hablando");
        i2.setDescripcion("Aqui estoy en Octubre del 1995 a los 3 años");
        
        
        Imagen i3=new Imagen();
        i3.setUrl("/ProyectofinalCarrusel/3.fw.png");
        i3.setTitulo("Navidad");
        i3.setDescripcion("Aqui en el año de 1994 a los 2 años en visperas de navidad");
        
        Imagen i4=new Imagen();
        i4.setUrl("/ProyectofinalCarrusel/4.fw.png");
        i4.setTitulo("Graduado");
        i4.setDescripcion("Graduacion de mi tio, usando su traje, jeje");
        
         Imagen i5=new Imagen();
        i5.setUrl("/ProyectofinalCarrusel/5.fw.png");
        i5.setTitulo("Deportista");
        i5.setDescripcion("Aqui practicando el basquet a los 2 años");
        
        Imagen i6= new Imagen();
        i6.setUrl("/ProyectofinalCarrusel/6.fw.png");
        i6.setTitulo("Aplaudiendo");
        i6.setDescripcion("24 de diciembre del año 1993 a 1 año de edad");
        
        Imagen i7= new Imagen();
        i7.setUrl("/ProyectofinalCarrusel/7.fw.png");
        i7.setTitulo("Pastorela");
        i7.setDescripcion("Aqui pastorela a los 10 años de edad, en tercero de primaria");
        
        
        //Agregar estas imagenss al ArrayList
        
        imagenes.add(i1);
        imagenes.add(i2);
        imagenes.add(i3);
        imagenes.add(i4);
        imagenes.add(i5);
        imagenes.add(i6);
        imagenes.add(i7);
        
        
    
        
        
    }

    public ArrayList<Imagen> leerTodas() {
        return imagenes;
    }

    public void setImagenes(ArrayList<Imagen> imagenes) {
        this.imagenes = imagenes;
    }
    
    
    
    
}


// Imagen


public class Imagen{
    
    private String titulo;
    private String url;
    private String descripcion;

    public Imagen() {
    }

    public Imagen(String titulo, String url, String descripcion) {
        this.titulo = titulo;
        this.url = url;
        this.descripcion = descripcion;
    }

    public String getDescripcion() {
        return descripcion;
    }

    public void setDescripcion(String descripcion) {
        this.descripcion = descripcion;
    }

    public String getTitulo() {
        return titulo;
    }

    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }

    public String getUrl() {
        return url;
    }

    public void setUrl(String url) {
        this.url = url;
    }
    
    
}


//Persistencia usuario

import java.io.*;
public class PersistenciaUsuario {
    
    
    public void guardarUsuario(Usuario u)throws Exception{
        
        File f=new File("D:\\archivoGuardado.txt");
        FileOutputStream fos=new FileOutputStream(f); 
        ObjectOutputStream oos=new ObjectOutputStream(fos);
        oos.writeObject(u); 
        System.out.println("Objeto Cliente guardado");
        
    }
    
    public Usuario leerUsuario()throws Exception{
         File f=new File("D:\\archivoGuardado.txt");
         FileInputStream fis=new FileInputStream(f);
         ObjectInputStream ois=new ObjectInputStream(fis);
         Usuario u=(Usuario)ois.readObject();
        System.out.println("Clienterecobrado");
    return u;
    }
    
}

